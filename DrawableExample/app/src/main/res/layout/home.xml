<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alice_blue"
    tools:context=".DrawableActivity">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="224dp"
        android:layout_height="84dp"
        android:layout_marginTop="28dp"
        android:text="@string/welcome_to_my_application"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/click_bn"
        android:layout_width="347dp"
        android:layout_height="57dp"
        android:background="@drawable/click"
        android:text="@string/click_here"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_tv"
        app:layout_constraintVertical_bias="0.032" />

    <ImageView
        android:id="@+id/img1_iv"
        android:layout_width="170dp"
        android:layout_height="273dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/click_bn"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@drawable/image1"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/img2_iv"
        android:layout_width="167dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="@+id/img1_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/img1_iv"
        app:layout_constraintTop_toTopOf="@+id/img1_iv"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/images2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img3_iv"
        android:layout_width="156dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1_iv"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@drawable/ic_captain_america_s_shield"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>